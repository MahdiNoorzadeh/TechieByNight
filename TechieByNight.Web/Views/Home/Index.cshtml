@model TechieByNight.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                TechieByNight - The Lazy Blog
            </h1>
            <p class="lead">
                Techie is a minimalist personal blog tailored for laid-back programmers. Embracing simplicity, it boasts a classical design aesthetic while maintaining a lightweight structure. It caters to programmers seeking a hassle-free platform, free from unnecessary clutter or distractions. With its streamlined interface and emphasis on essential features, Techie offers a seamless blogging experience for those who prefer a no-fuss approach to sharing their insights and experiences in the tech world.
            </p>
        </div>


        <div class="col-12 col-lg-6"">
            <img src="https://cdn.pixabay.com/photo/2020/04/10/15/07/zzz-5026213_1280.jpg" alt="The Hero Section Image." class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if (Model != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.blogPosts.Any())
            {
                foreach (var blogPost in Model.blogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid" />
                        <h2 class="mb-4">
                            @blogPost.Heading
                        </h2>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-primary me-1">
                                    @tag.DisplayName
                                </span>
                            }
                        </p>

                        <p class="mb-4">
                            @blogPost.ShortDescription
                        </p>

                        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                    </div>
                }
            }
        </div>
    </div>
</div>